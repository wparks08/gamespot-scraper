<div class="modal" id="comments-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Comments</h5>
                <button class="close" type="button" data-dismiss="modal" arial-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="comments"></div>
                <hr>
                <div id="add-comment">
                    <form>
                        <div class="form-group">
                            <label for="comment">Comment</label>
                            <textarea class="form-control" id="comment" rows="3"></textarea>
                        </div>
                        <button class="btn btn-primary float-right" id="save-comment-btn">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-12">
            <div class="jumbotron">
                <h1 class="display-4">Saved Articles</h1>
                <p class="lead">View saved articles and leave notes on them.</p>
            </div>
        </div>
    </div>
    <div id="savedArticles"></div>
</div>

{{>scripts}}
<script src="assets/js/saved.js"></script>